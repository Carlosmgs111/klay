{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*",
    "src/.utils",
    "src/.stores"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/features/*": ["src/features/*"],
      "@/shared/*": ["src/shared/*"],
      "@/layouts/*": ["src/layouts/*"],
      "@/modules/*": ["src/backend/*"],
      "@klay+/*": ["src/backend/klay+/*"],
      "@klay+/shared/*": ["src/backend/klay+/shared/*"],
      "@klay+/platform/*": ["src/backend/klay+/platform/*"],
      "@klay+/contexts/*": ["src/backend/klay+/contexts/*"],
      "@klay+/application/*": ["src/backend/klay+/application/*"],
      "@klay+/adapters/*": ["src/backend/klay+/adapters/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}
